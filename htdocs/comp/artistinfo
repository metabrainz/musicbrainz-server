<%args>

	$artist
	$short => 0

</%args>
%	$artist->LoadLastUpdate();
%	my $lastupdate = MusicBrainz::Server::DateTime::last_update($artist->GetLastUpdate());

	<& /comp/tablebegin, title => "Artist information" &>

		<table class="formstyle">
			<tr>
				<td class="label">
					<& /comp/linkdoc, "ArtistName", "Name" &>:</td>
				<td>
					<& /comp/linkartist, artist => $artist &></td>
			</tr>
			<tr>
				<td class="label">
					<& /comp/linkdoc, "MusicBrainzIdentifier", "MBID" &>:</td>
				<td>
					<% $artist->GetMBId %></td>
			</tr>
%			if ($lastupdate) {
				<tr>
					<td class="label">
						Last updated:</td>
					<td>
						<% $lastupdate %></td>
				</tr>
%			}

%	if (not $short)
%	{

			<tr>
				<td class="label">
					Permanent link:</td>
				<td>
					<& /comp/copyable-link, "artist", $artist, "linkedurl", &></td>
			</tr>
			<tr>
				<td class="label">
					Fancy link:</td>
				<td>
					<a href="/show/permlink.html?id=<% $artist->GetMBId %>&amp;type=artist"
						>Click here for a fancy link to this artist</a></td>
			</tr>
			<tr>
				<td class="label">
					<a href="/development/mmd">XML</a>:</td>
				<td>
					<a href="<% $artist->XML_URL %>"><% substr($artist->XML_URL, 0, 48) . " &#8230;" |n %></a></td>
			</tr>

% 		if ($session{uid})
%		{

			<tr>
				<td class="label">
					<& /comp/linkdoc, "ArtistID" &>:</td>
				<td>
					<% $artist->GetId %></td>
			</tr>

% 		}

			<tr>
				<td class="label">
					Subscribers:</td>
				<td>
					<% scalar $artist->GetSubscribers %>
					&nbsp;
					[ <a href="/show/artist/subscriptions.html?artist=<% $artist->GetId %>">List</a>

%		if (exists $session{user}
%			and $artist->GetId != &ModDefs::VARTIST_ID
%			and $artist->GetId != &ModDefs::DARTIST_ID)
%		{

						| <a href="/user/subscribe.html?artistid=<% $artist->GetId %>">Subscribe to this artist</a>
						| <a href="/user/subscribe.html?artistid=<% $artist->GetId %>&amp;unsubscribe=1">Unsubscribe from this artist</a>

% 		}

					]
				</td>
			</tr>

%	}

		</table>

	<& /comp/tableend &>

