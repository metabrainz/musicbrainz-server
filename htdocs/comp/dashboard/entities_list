<%args>
	$data
	$type 
</%args>

<%perl>
my ($item, $count, $date);
</%perl>

<p>recently changed <% $type %>s:</p>
<table>
<tr> <th>Last updated</th> <th><% ucfirst($type) %></th> </tr>
% foreach $date (@$data) {
    <tr>
	    <td valign="top"><% MusicBrainz::Server::DateTime::format_datetime_since($date->[0]) %></td>
	    <td>
%       $count = 0;
%       foreach $item (@{$date->[1]}) {
		    <span class="link<% $type %>-icon"><a href="/<% $type %>/<% $item->[0] %>.html"><% $item->[1] %></a></span><br/>
%			if ($count++ == 2) {
				[ <a href="/show/stats/dashboard.html?date=<% $date->[0] %>&type=<% $type %>">See all 
				<% scalar(@{$date->[1]}) %> items</a> ]
%				last;
%			}
%		}
		</td>
    </tr>
% }
</table>
