#!/bin/bash

cd "$(dirname "${BASH_SOURCE[0]}")/../"

./node_modules/.bin/eslint \
    --no-eslintrc \
    --env 'browser,node,es6' \
    --parser babel-eslint \
    --plugin react \
    --plugin flowtype \
    --plugin import \
    --plugin react-hooks \
    --rule 'react/jsx-uses-react: warn' \
    --rule 'react/jsx-uses-vars: warn' \
    --rule \
    "$@"
