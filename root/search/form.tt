[% WRAPPER "components/box.tt" header="Search" %]
    <div class="searchform">
    [% WRAPPER "forms/form.tt" action=c.uri_for('/search') method='get' %]
        [% INCLUDE "forms/generic/row.tt" field=form.field('query') label="Search for" type='text' %]
        [% INCLUDE "forms/generic/row.tt" field=form.field('type')  label="Type" type='select' %]
        
        [% INCLUDE "forms/generic/row.tt" field=form.field('limit') label="Limit to" type='select' %]
        [% INCLUDE "forms/generic/row.tt" field=form.field('enable_advanced') label="Use advanced query syntax" type='checkbox' %]

        [% INCLUDE "forms/submit.tt" label="Search" %]
    [% END %]
    </div>

    <div class="searchinfo">
    <strong>Please Note:</strong>

    <ul>
        <li>Search indexes are currently updated once a day at 1800 GMT (10am PST).
        If you require up to the minute correct search, please use the <a href="[% c.uri_for('/search/internal') %]">old search</a>.</li>
    </ul>
    </div>
[% END %]
