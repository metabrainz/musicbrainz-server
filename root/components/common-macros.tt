[%~ MACRO isolate_text(text) BLOCK; # Converted to React at root/static/scripts/common/utility/isolateText.js
    IF text != ''; INCLUDE _wrap_text options=['isolate', 'escape'] content=text;
    ELSE; '';
    END;
END ~%]

