    text = text == '' ? html_escape(work.name) : text;
    '<span class="mp">' IF work.edits_pending AND action == 'show';
    '<a href="' _ link _ '"><bdi>' _ text _ '</bdi></a>';
    '</span>' IF work.edits_pending AND action == 'show';
END -%]

