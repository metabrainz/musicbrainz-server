<table class="details edit-label-alias">
  <tr>
    <th>[% l('Label:') %]</th>
    <td colspan="2">[% link_entity(edit.display_data.label) %]</td>
  </tr>
  [% IF edit.display_data.alias.new %]
  <tr>
    <th>[% l('Alias:') %]</th>
    <td class="old">[% edit.display_data.alias.old | html %]</td>
    <td class="new">[% edit.display_data.alias.new | html %]</td>
  </tr>
  [% END %]
  [% IF edit.display_data.locale.new %]
  <tr>
    <th>[% l('Locale:') %]</th>
    <td class="old">[% edit.display_data.locale.old | language %]</td>
    <td class="new">[% edit.display_data.locale.new | language %]</td>
  </tr>
  [% END %]
</table>
