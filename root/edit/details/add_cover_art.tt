[%- PROCESS 'edit/details/macros.tt' -%]

<table class="details add-cover-art">
  <tr>
    <th>[% l('Release:') %]</th>
    <td>[% link_entity(edit.display_data.release) %]</td>
  </tr>

  <tr>
    <th>[% l('Type:') %]</th>
    <td>[% edit.data.cover_art_type | html %]</td>
  </tr>

  <tr>
    <th>[% l('Page:') %]</th>
    <td>[% edit.data.cover_art_page | html %]</td>
  </tr>

  <tr>
    <th>[% l('Cover art:') %]</th>
    <td>
      [% IF edit.is_open %]
        <img src="[% edit.display_data.cover_art_url %]" />
      [% ELSE %]
        [% l('We are unable to display history for cover art. For a current listing
              of cover art, please see the {coverart|releases cover art page}.',
              { coverart => c.uri_for_action('/release/cover_art/', [ edit.display_data.release.gid ]) }) %]
      [% END %]
    </td>
  </tr>
</table>
